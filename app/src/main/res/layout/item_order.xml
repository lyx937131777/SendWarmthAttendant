<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/state"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/end_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/state"
            app:layout_constraintRight_toRightOf="@id/state"
            app:layout_constraintTop_toTopOf="@id/state"
            app:layout_constraintBottom_toBottomOf="@id/state"/>

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:maxLines="1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:id="@+id/customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:maxLines="1"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/number"
            app:layout_constraintLeft_toLeftOf="@id/number"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/attendant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:maxLines="1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/customer"
            app:layout_constraintLeft_toRightOf="@id/customer"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@id/number"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/start_time"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/service_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="24sp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/customer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加急"
            android:textSize="24sp"
            android:maxLines="1"
            android:textColor="@color/red"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@id/service_content"
            app:layout_constraintBottom_toBottomOf="@id/service_content"
            app:layout_constraintLeft_toRightOf="@id/service_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>